<Window x:Class="GameLib_Projet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLib_Projet"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:GameLib_Projet="clr-namespace:GameLib_Projet" 
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1024">

    <Window.Resources>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Toledo"/>
            <Setter Property="Foreground" Value="RoyalBlue"/>
            <Setter Property="FontStretch" Value="Condensed"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

    </Window.Resources>

    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Background="#FF237CC7">
            <Button Background="#FF237CC7" Height="100" Opacity="0.995">
                <Image Source="img/logo.png" Width="100" Height="80"/>
            </Button>
            <StackPanel Orientation="Horizontal" Margin="100, 0, 0, 0">
                <ComboBox Margin="10" SelectedIndex="0" >
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="#FFE5E5E5" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>
                    <ComboBoxItem Content="Genre"/>
                    <ComboBoxItem Content="Aventure"/>
                    <ComboBoxItem Content="Action"/>
                    <ComboBoxItem Content="Combat"/>
                    <ComboBoxItem Content="FPS"/>
                    <ComboBoxItem Content="RPG"/>
                </ComboBox>
                <ComboBox Margin="10" Width="auto" SelectedIndex="0">
                    <ComboBoxItem Content="Limite d'âge"/>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/Pegi3.jpg" Height="20"/>
                            <TextBlock Foreground="LightGreen"><Run Text="Pegi 3"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/Pegi7.jpg" Height="20"/>
                            <TextBlock Foreground="Green"><Run Text="Pegi 7"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/Pegi12.jpg" Height="20"/>
                            <TextBlock Foreground="Orange"><Run Text="Pegi 12"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/Pegi16.jpg" Height="20"/>
                            <TextBlock Foreground="OrangeRed"><Run Text="Pegi 16"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/Pegi18.png" Height="20"/>
                            <TextBlock Foreground="DarkRed" FontWeight="Bold"><Run Text="Pegi 18"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>

                </ComboBox>
                <ComboBox Margin="10" Width="100" SelectedIndex="0">
                    <ComboBoxItem Content="Note"/>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/etoile.png" Height="20"/>
                            <TextBlock Foreground="Orange"><Run Text="1"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <TextBlock Foreground="Orange"><Run Text="2"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <TextBlock Foreground="Orange"><Run Text="3"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <TextBlock Foreground="Orange"><Run Text="4"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <Image Source="img/etoile.png" Height="20"/>
                            <TextBlock Foreground="Orange"><Run Text="5"/></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
                <ComboBox Margin="10" Width="auto" SelectedIndex="0">
                    <ComboBoxItem Content="Plate-forme"/>
                    <ComboBoxItem Content="Plate-forme"/>
                    <ComboBoxItem Content="PC"/>
                    <ComboBoxItem Content="PS4"/>
                    <ComboBoxItem Content="Xbox One"/>
                </ComboBox>
                <ComboBox Margin="10" Width="auto" SelectedIndex="0">
                    <ComboBoxItem Content="Favoris"/>
                    <ComboBoxItem Content="Favoris"/>
                    <ComboBoxItem Content="Oui"/>
                    <ComboBoxItem Content="Non"/>
                </ComboBox>
            </StackPanel>
            <Ellipse Width="76" Height="70"/>
        </WrapPanel>
        <ScrollViewer>
            <ListBox DockPanel.Dock="Left" Background="#FF237CC7">

                <local:UC_jeuListe/>
                <StackPanel>
                    <Image Source="img/gtaV.jpg" MaxHeight="200" MaxWidth="110"/>
                    <TextBlock Text="GTA V" FontFamily="AcmeFont" FontSize="24" HorizontalAlignment="Center"/>
                </StackPanel>

                

            </ListBox>
        </ScrollViewer>

        <Grid Background="#FF237CC7">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <Image Source="img/baniere.jpg" Margin="10" Width="auto" Grid.Row="0" Height="auto"/>
            <TextBlock Grid.Row="1" Margin="2" VerticalAlignment="Center" HorizontalAlignment="center" FontWeight="Bold" FontSize="30" FontFamily="Toledo" Foreground="White" FontStyle="Italic">
                <TextBlock.TextDecorations>
                    <TextDecoration/>
                </TextBlock.TextDecorations><Run Text="Bienvenue sur GameLib"/></TextBlock>
        </Grid>
    </DockPanel>
</Window>
